            scrolling: {
                mode: "virtual"
            },
            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            editing: {
                //refreshMode: "full",
                mode: "popup",
                allowAdding: true,
                allowUpdating: true,
                selectTextOnEditStart: true,
                startEditAction: "click",
                useIcons: true,
                popup: {
                    title: "Dept info",
                    showTitle: true,
                    width: 700,
                    height: 300
                },
