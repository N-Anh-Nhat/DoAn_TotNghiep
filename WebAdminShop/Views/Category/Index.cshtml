                                                url: "@Url.Action("UpdatelstCategory", "Category")",
                                                data: data,
                                                contentType: false,
                                                processData: false,
                                                success: function (result) {
                                                    if (result.IsSuccess == true) {
                                                        if (result.Data.Status == 1) {
                                                            $("#input-Name").dxTextBox("instance").option("value", "");

