    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#IM')
                    .attr('src', e.target.result)
                    
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    var popupAdd = $("#popup").dxPopup({
        width: 700,
        height: 450,
        toolbarItems: [{
            widget: "dxButton",
            location: "after",
            toolbar: "bottom",
            options: {
                text: "Lưu",
              
            }
        }, {
            widget: "dxButton",
            location: "after",
            toolbar: "bottom",
            options: {
                text: "Thoát",
                onClick: function (e) {
                    popupAdd.hide();
                    document.getElementById("IM").src ="";
                    document.getElementById("photoUrl").value = "";
                       
                }
            }
            },
        ],
        contentTemplate: function (container) {
            var view = $("<div>").append(
                $("<div class='row p-1' />").append(
                    $("<div class='col-3 mt-2'>Tên loại sản phẩm: </div>"),
                    $("<div class='col-9 mt-2' id='input-Name'>").dxTextBox({
                        showClearButton: true,
                        placeholder: "Nhập tên loại sản phẩm"
                    }),
                    $("<div class='col-3 mt-2'>Hình Ảnh: </div>"),
                    $("<div class='col-9 mt-2'><form id='form-data'  method = 'post' enctype = 'multipart/form-data' > <input class= '' style = '' type = 'file' name='file' id = 'photoUrl' onchange='readURL(this)'  /><br><img id='IM' src='#' alt='your image' /></form></div > "),


                    $("<div class='col-3 mt-2'>Chi tiết: </div>"),
                    $("<div class='col-9 mt-2' id='input-Detail'>").dxTextBox({
                        showClearButton: true,
                        placeholder: "Nhập chi tiết"
                    }),
                    $("<div class='col-3  mt-2'>Trạng thái: </div>"),
                    $("<div class='col-9 mt-2' id='input-Status'>").dxCheckBox({
                        value: false,
