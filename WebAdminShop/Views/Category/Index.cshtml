                                    popupAdd.hide();
                                    $("#gridList").dxDataGrid("instance").refresh();

                                    DevExpress.ui.notify("Cập nhật thành công", "success", 3000);
                                } else if (result.Data.Status == -2) {
                                    DevExpress.ui.notify("Lưu tệp lỗi.", "Warning", 3000);
                                }
                                else {
