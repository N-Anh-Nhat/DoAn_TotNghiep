@{ 
    var listorderOfUser = ViewBag.ListOrder;
} 
 <!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Wishlist</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Shop</a></li>
                    <li class="breadcrumb-item active">Đơn hàng</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Wishlist  -->
<div class="wishlist-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 style="text-align: center; font-weight: bold; color: #000; font-size: 22px;">
                    <p style="margin: 20px 0;">
                    Thông tin đơn hàng
                    </p>
                </h3>
                <div class="table-main table-responsive">

                    <table class="table">
                        <thead class="thead-ligh">
                            <tr>
                                <th scope="col">Mã đơn hàng</th>
                                <th scope="col">Tên đơn hàng</th>
                                <th scope="col">Giao hàng</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">Email</th>
                                <th scope="col">Note</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Tổng tiền</th>
                                <th scope="col">Trạng thái</th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.ListOrder)
                        {
                            String ConvPrivcie = String.Format("{0:#,#.##}", item.ToTal_Money);
                            <tbody>
                                <tr>
                                    <td class="name-pr">
                                        <a class="btn" onclick="chiTietDonHang(@item.ID, 'Chi tiết hóa đơn', 'Mã đơn hàng: @item.ID')">
                                            <p>
                                                @item.ID
                                            </p>
                                        </a>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Name_order
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Type_ship
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Address
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Email
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Note
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @item.Phone
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @ConvPrivcie VND
                                        </p>
                                    </td>
                                    <td class="name-pr">
                                        <p>
                                            @if (@item.Status == true)
                                            {
                                            <p>ADMIN đã duyệt</p>
                                        }
                                            @if (@item.Status == false)
                                            {
                                                <p>Đang chờ duyệt</p>
                                            }
                                            </p>
                                        </td>
                                    </tr>


                                </tbody>
                            }
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Wishlist -->
<script>
    function chiTietDonHang(id, title, title2) {

        $.ajax({
            type: 'GET',
            url: "../User/ChiTietDonHang?id=" + id,
            success: function (res) {
                $('#form-modal .modal-body').html(res);
                $('#form-modal .modal-title').html(title);
                $('#form-modal .modal-title2').html(title2);
                $('#form-modal').modal('show');
            
            }
        })
    }
</script>