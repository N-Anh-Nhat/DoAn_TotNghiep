<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Giỏ hàng của bạn</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Shop</a></li>
                    <li class="breadcrumb-item active">Giỏ hàng</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ảnh sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Kích cỡ</th>
                                <th>Số lượng</th>
                                <th>Tổng</th>
                                <th>Hủy bỏ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="~/images/img-pro-01.jpg" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        Lorem ipsum dolor sit amet
                                    </a>
                                </td>
                                <td class="price-pr">
                                    <p>$ 80.0</p>
                                </td>
                                <td class="price-pr">
                                    <p>S</p>
                                </td>
                                <td class="quantity-box"><input type="number" size="4" value="1" min="0" step="1" class="c-input-text qty text"></td>
                                <td class="total-pr">
                                    <p>$ 80.0</p>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="coupon-box">
                    <div class="input-group input-group-sm">
                        <input class="form-control" placeholder="Nhập mã giảm giá" aria-label="Coupon code" type="text">
                        <div class="input-group-append">
                            <button class="btn btn-theme" type="button">Áp dụng</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="update-box">
                    <input value="Cập nhật giỏ hàng" type="submit">
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-md-12 col-lg-12">
                <div class="shipping-method-box">
                    <div class="title-left">
                        <h3>Giao hàng</h3>
                    </div>
                    <div class="mb-4">
                        <div class="custom-control custom-radio">
                            <input id="shippingOption1" name="shipping-option" class="custom-control-input" checked="checked" type="radio">
                            <label class="custom-control-label">Giao hàng thường</label> <span class="float-right font-weight-bold">FREE</span>
                        </div>
                        <div class="ml-4 mb-2 small">(3-7 ngày làm việc)</div>
                        <div class="custom-control custom-radio">
                            <input id="shippingOption2" name="shipping-option" class="custom-control-input" type="radio">
                            <label class="custom-control-label" for="shippingOption2">Giao hàng nhanh</label> <span class="float-right font-weight-bold">$10.00</span>
                        </div>
                        <div class="ml-4 mb-2 small">(2-4 ngày làm việc)</div>
                        <div class="custom-control custom-radio">
                            <input id="shippingOption3" name="shipping-option" class="custom-control-input" type="radio">
                            <label class="custom-control-label" for="shippingOption3">Giao hàng đặc biệt</label> <span class="float-right font-weight-bold">$20.00</span>
                        </div>
                        <div class="ml-4 mb-2 small">(1-2 ngày làm việc)</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-8 col-sm-12">
                <img src="~/images/payment-icon/thanhtoanthuanloi(1).gif" alt="Alternate Text" />
            </div>
            <div class="col-lg-4 col-sm-12">
                <div class="order-box">
                    <h3>Tổng hóa đơn</h3>
                    <div class="d-flex">
                        <h4></h4>
                        <div class="ml-auto font-weight-bold"> $ 130 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Giảm giá</h4>
                        <div class="ml-auto font-weight-bold"> $ 40 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>Giao hàng</h4>
                        <div class="ml-auto font-weight-bold">Giao hàng nhanh</div>
                    </div>
                    <div class="d-flex">
                        <h4>Phí giao hàng</h4>
                        <div class="ml-auto font-weight-bold"> $ 2 </div>
                    </div>
                    
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>Thành tiền</h5>
                        <div class="ml-auto h5"> $ 388 </div>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-12 d-flex shopping-box">
                <button class="ml-auto btn hvr-hover" type="button">Đặt hàng</button>
            </div>
        </div>

    </div>
</div>
<!-- End Cart -->
