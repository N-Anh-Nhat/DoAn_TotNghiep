<!-- Start NEWS  -->
@{ 
    var ListNews= (List<WebAPI.Models.News>)ViewBag.ListNews;
}
<section class=" container section_news">
    <div class="row">
        <!-- LIST NEWS  -->
        <div class="col-md-8">
            <div class="container title_catelogy">
                <h3>TIN TỨC MỚi NHẤT</h3>
            </div>
            
            @foreach (var item in ListNews)
            {
                <div class=" container news_list">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 picture_option">
                            <p class="Picture_new">
                                <a asp-controller="TheWayShop" asp-action="News_Detail" asp-route-id="@item.ID"><img class="img_news" src="~/images/about-img.jpg" alt=""></a>
                            </p>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
                            <div class="title_content_news">
                                <a asp-controller="TheWayShop" asp-action="News_Detail" asp-route-id="@item.ID"> <h3>@item.Name</h3></a>
                            </div>
                            <div class="datetime_news">
                                <span class="datetime">@item.CreatedDate</span>
                            </div>
                            <div class="content_news">
                                <p>@item.Detai_Name</p>
                            </div>
                            <div class="Danh_muc_lien_quan">
                                <span>
                                    <p>Danh mục:&nbsp;<strong class="sp_lien_quan">@item.ID_Catelogy</strong></p>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-4">
            bên đây quảng cáo nè
        </div>
    </div>
    <!-- LIST ADS  -->
    </div>
</section>

<!-- End NEWS -->