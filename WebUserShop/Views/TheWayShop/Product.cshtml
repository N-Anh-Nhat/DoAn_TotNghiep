   <!-- Start All Title Box -->


@{
    var listSP = (IEnumerable<WebAPI.Models.Product>)ViewBag.posts;
    var listCategory = (List<WebAPI.Models.Category>)ViewBag.ListCategory;
    var totalspCa = ViewBag.totalSPCate;


}
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Sản phẩm</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","TheWayShop")">Home</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Page  -->
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categori">
                    <div class="search-product">
                        @using (Html.BeginForm("Product", "TheWayShop", FormMethod.Get))
                        {

                            <input class="form-control" placeholder="Tìm sản phẩm..." type="text" name="txtSearch">
                            <button type="submit"> <i class="fa fa-search"></i> </button>
                        }

                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3>Thể loại</h3>
                        </div>
                        <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
                            @foreach (var item in totalspCa)
                            {
                                <a href="#" class="list-group-item list-group-item-action">
                                    @item
                                    @*<small class="text-muted">ddd </small>*@
                                </a>
                            }


                        </div>
                    </div>
                    <div class="filter-brand-left">
                        <div class="title-left">
                            <h3>Sắp xếp</h3>
                        </div>
                        <div class="brand-box">
                            <ul>
                                <form method="get" action="Product">
                                    <li>
                                        <div class="radio radio-danger">
                                            <input name="sort" id="Radios1" value="PriceLowToHigh" type="radio">
                                            <label for="Radios1"> Giá thấp đến cao </label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="radio radio-danger">
                                            <input name="sort" id="Radios2" value="PriceHighToLow" type="radio">
                                            <label for="Radios2"> Gái cao đến thấp </label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="radio radio-danger">
                                            <input name="sort" id="Radios3" value="CharA_Z" type="radio">
                                            <label for="Radios3"> Thứ tự chữ cái A-Z </label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="radio radio-danger">
                                            <input name="sort" id="Radios4" value="CharZ_A" type="radio">
                                            <label for="Radios4"> Thứ tự chữ cái Z-A </label>
                                        </div>
                                    </li>
                                    <input type="submit"/>
                                </form>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-item-filter row">
                        <p class="custosm_tottal">Có tất cả <strong>@ViewBag.TotalSp</strong> sản phẩm trong kho</p>
                    </div>
                </div>
                <div class="row product-categorie-box">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                            <div class="row">
                                @if (listSP.Count() > 0)
                                {
                                    @foreach (var item in listSP)
                                    {
                                        TimeSpan time = DateTime.Now - item.CreatedDate;
                                        decimal giaSale = item.Price * item.PromotionPrice / 100;
                                        decimal GiaSpDaSale = item.Price - giaSale;
                                        String ConvGiaSpDaSale = String.Format("{0:#,#.##}", GiaSpDaSale);
                                        String ConvPrivcie = String.Format("{0:#,#.##}", item.Price);
                                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                            <div class="products-single fix">
                                                <div class="box-img-hover">

                                                    @if (item.PromotionPrice > 0)
                                                    {
                                                        <div class="type-lb">
                                                            <p class="sale">Giảm giá @item.PromotionPrice%</p>
                                                        </div>
                                                    }
                                                    @if (time.Days < 7)
                                                    {
                                                        <div class="type-lb1">
                                                            <p class="sale">Mới ra mắt</p>
                                                        </div>
                                                    }
                                                    <img src="~/images/img-pro-01.jpg" class="img-fluid" alt="Image">
                                                    <div class="mask-icon">
                                                        <ul>
                                                            <li><a asp-controller="TheWayShop" asp-action="Product_detail" asp-route-id="@item.ID" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                                        </ul>
                                                        <a class="cart" href="#">Thêm vào giỏ hàng</a>
                                                    </div>
                                                </div>
                                                <div class="why-text">
                                                    <h4>@item.Name</h4>
                                                    <h5>@ConvGiaSpDaSale</h5>
                                                    <h6>@ConvPrivcie</h6>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="container text-center m-auto">
                                        <i class="empty"></i>
                                        Không có sản phẩm nào phù hợp với tiêu chí tìm kiếm!
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                @*phân trang*@
                <div class="card-footer">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @{
                                int position;
                                int pageCurrent = ViewBag.pageCurrent;
                                float numSize = ViewBag.numSize;
                                if (pageCurrent > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Product", "TheWayShop", new { page = pageCurrent-1 })" >Previous</a>
                                    </li>
                                }

                                for (position = 1; position <= numSize; position++)
                                {

                                    if (position == pageCurrent)
                                    {
                                        <li class="page-item active"><a class="page-link" href="@Url.Action("Product", "TheWayShop",new {  page = position })">@position</a></li>
                                    }

                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="@Url.Action("Product", "TheWayShop", new { page = position })">@position</a></li>
                                    }

                                }
                                if (pageCurrent > 0 && pageCurrent < numSize)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Product", "TheWayShop", new {  page = pageCurrent+1 })">Next</a>
                                    </li>
                                }

                            }

                        </ul>
                    </nav>
                </div>




            </div>
        </div>
    </div>
</div>
    </div>
<!-- End Shop Page -->
