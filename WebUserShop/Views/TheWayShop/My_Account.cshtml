  <!-- Start All Title Box -->
@{ 
    var infoUser = (List<User>)ViewBag.infoUser;
}
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Tài khoản</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Shop</a></li>
                    <li class="breadcrumb-item active">Tài khoản</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start My Account  -->
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- end row -->
            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9 col-xl-9">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3><i class="far fa-user"></i> Chi tiết cá nhân</h3>
                        </div>
                        <div class="card-body">
                            @foreach (var item in infoUser)
                            {
                                <form id="EditUser" >

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Last name</label>
                                                <input class="form-control" id="Last_NameUser" name="Last_NameUser" type="text" value="@item.Last_Name" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Frist name</label>
                                                <input class="form-control" id="Frist_NameUser" name="Frist_NameUser" type="text" value="@item.Frist_Name" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input class="form-control" type="email" id="EmailUser" readonly value="@item.Email" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Địa chỉ</label>
                                                <input class="form-control" id="AddressUser" name="AddressUser" value="@item.Address" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <input class="form-control" readonly id="PhoneUser" value="@item.Phone" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Ngày tạo</label>
                                                <input class="form-control" readonly value="@item.CreatedDate" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <input type="hidden" id="id" value="@item.ID" />
                                            <input type="hidden" id="tkUserdn" value="@item.UserName" />
                                            <input type="hidden" id="tkPassdn" value="@item.Password" />
                                            <input type="hidden" id="idroleUser" value="@item.ID_Role" />
                                            <input type="submit" value="Sửa thông tin" class="btn btn-primary w-100" />
                                        </div>
                                    </div>
                                    
                                </form>
                            }
                            </div>
                        <!-- end card-body -->

                    </div>
                    <!-- end card -->

                </div>
                <!-- end col -->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3><i class="far fa-file-image"></i> Ảnh đại diện</h3>
                        </div>

                        <div class="card-body text-center">

                            <div class="row">
                                <div class="col-lg-12">
                                    <img alt="avatar" class="img-fluid" src="">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="button" class="btn btn-danger btn-block mt-3">Xóa đại diện</button>
                                </div>

                                <div class="col-lg-12">
                                    <button type="button" class="btn btn-info btn-block mt-3">Thay đổi đại diện</button>
                                </div>
                            </div>
                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- END container-fluid -->
    </div>
    <!-- END content -->
</div>
<!-- END content-page -->
<!-- End My Account -->
